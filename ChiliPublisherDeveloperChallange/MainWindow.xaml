<Window x:Class="ChiliPublisherDeveloperChallange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChiliPublisherDeveloperChallange"
        mc:Ignorable="d"
        Title="MainWindow" Height="1500" Width="1500" Background="#1E1E1E">
    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <Button Margin="10" Content="Read XML file" x:Name="ReadXMLFile" Click="ReadXMLFile_Click"/>
            <Button Margin="10" Content="Draw" x:Name="CreatePreview" Click="CreatePreview_Click" />
            <Button Margin="10" Content="Save" x:Name="SavePreview" Click="SavePreview_Click" />

        </StackPanel>

            <Image Stretch="Fill" 
                   x:Name="RenderedPreview"
                   Width="1000"
                   Height="1000"
                   Grid.Column="1"
                   Grid.Row="1"/>   
    </Grid>
</Window>
